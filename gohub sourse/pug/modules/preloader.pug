style.
  .fix {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
  }
  .preloader-wrap {
    display: none;
  }
  .loading .preloader-wrap {
    display: block;
    position: fixed;
    top: calc(50% - 50px);
    left: calc(50% - 100px);
    z-index: 1000;
    width: 200px;
    height: 100px;
  }
  .loading .preloader-wrap .svg-icon {
    width: 100%;
    height: 100%;
    animation: pulse 1s infinite alternate;
  }
  .loading .preloader-wrap::before,
  .loading .preloader-wrap::after {
    content: "";
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
    background: #fff;
    transition: all .7s ease;
  }
  .loading .preloader-wrap::after {
    opacity: .5;
    transition-delay: .1s;
  }
  .loading .transition .svg-icon {
    animation: none;
    opacity: 0;
  }
  .loading .transition::before,
  .loading .transition::after {
    transform: translateY(-100%);
  }
  @keyframes pulse {
    0% {transform: scale(.9); opacity: .7;}
    100% {transform: scale(1.1); opacity: 1;}
  }

