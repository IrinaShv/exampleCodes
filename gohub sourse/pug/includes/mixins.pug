mixin button(text,link,extraClass)
  a.btn(class=extraClass href=link)=text

mixin submit(text)
  button(class="btn" type='submit')=text

mixin list(items)
  ul
    for i in items
      li.list__item.wow.fadeInUp=i

mixin svg-icon(id)
  svg.svg-icon
    use(xlink:href="img/sprite.svg#" + id)